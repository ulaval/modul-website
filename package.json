{
    "name": "@ulaval/modul-website",
    "version": "0.1.0-openshift",
    "description": "MODUL web application.",
    "author": "Martin Simard <martin.simard@dti.ulaval.ca>",
    "private": true,
    "scripts": {
        "clean": "rimraf dist",
        "relink": "rimraf node_modules/@ulaval/modul-components && npm i",
        "dev": "webpack-dev-server --config conf/webpack.config.js --content-base src --colors --port 8083 --open --history-api-fallback",
        "build": "webpack --config conf/webpack.config.js --colors --optimize-minimize",
        "prod": "node server.js",
        "start": "node server.js",
        "unit": "karma start conf/karma.conf.js --browsers PhantomJS --single-run",
        "unitall": "karma start conf/karma.conf.js --single-run",
        "e2e": "node tests/e2e/index.js",
        "test": "npm run unitall && npm run e2e",
        "tslint": "tslint -c conf/tslint.json -e 'src/**/*.d.ts' -e 'tests/unit/**/*.d.ts' -s node_modules/custom-tslint-formatters/formatters -t grouped 'src/**/*.ts' 'tests/unit/**/*.ts' 'tests/e2e/*.ts'",
        "stylelint": "stylelint \"src/**/*.css\" \"src/**/*.scss\" --config conf/stylelint.json",
        "docker-build": "docker build -t docker-local.maven.at.ulaval.ca/modul/modul-website:$npm_package_version .",
        "docker-run": "docker run -it --net=host --rm --name c1 docker-local.maven.at.ulaval.ca/modul/modul-website:$npm_package_version",
        "docker-push": "docker push docker-local.maven.at.ulaval.ca/modul/modul-website:$npm_package_version"
    },
    "dependencies": {},
    "devDependencies": {
        "@types/es6-promise": "^0.0.32",
        "@types/jasmine": "^2.5.47",
        "@ulaval/modul-components": "https://contenu.monportail.ulaval.ca/mpo/tests/ulaval-modul-components-0.1.4.tgz",
        "@types/node": "^7.0.16",
        "awesome-typescript-loader": "^3.1.3",
        "axios": "^0.16.1",
        "bundle-loader": "^0.5.5",
        "compression-webpack-plugin": "^0.4.0",
        "css-loader": "^0.28.1",
        "es6-promise": "^4.1.0",
        "express": "^4.15.3",
        "express-static-gzip": "^0.3.0",
        "html-webpack-plugin": "^2.28.0",
        "node-sass": "^4.5.2",
        "postcss-loader": "^1.3.3",
        "rimraf": "^2.6.1",
        "sass-loader": "^6.0.3",
        "style-loader": "^0.17.0",
        "svg-inline-loader": "^0.7.1",
        "typescript": "^2.3.2",
        "uglifyjs-webpack-plugin": "^0.4.3",
        "uglify-js": "^2.8.22",
        "vue": "^2.3.2",
        "vue-class-component": "^5.0.1",
        "vue-property-decorator": "^5.0.1",
        "vue-router": "^2.5.3",
        "vue-template-compiler": "^2.3.2",
        "vue-template-loader": "^0.3.1",
        "vuex": "^2.3.1",
        "webpack": "^2.4.1",
        "webpack-dev-server": "^2.4.5",
        "custom-tslint-formatters": "^2.1.0",
        "tslint": "^5.1.0",
        "tslint-config-standard": "^5.0.2",
        "tslint-loader": "^3.5.3",
        "stylelint": "^7.10.1",
        "stylelint-config-standard": "^16.0.0",
        "stylelint-scss": "^1.4.4",
        "stylelint-webpack-plugin": "^0.7.0",
        "jasmine-core": "^2.4.1",
        "karma": "^1.4.1",
        "karma-chrome-launcher": "^2.1.1",
        "karma-firefox-launcher": "^1.0.1",
        "karma-jasmine": "^0.3.6",
        "karma-phantomjs-launcher": "^1.0.2",
        "karma-spec-reporter": "^0.0.26",
        "karma-webpack": "^2.0.2",
        "chromedriver": "^2.27.2",
        "nightwatch": "^0.9.12",
        "selenium-server": "^3.0.1"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/ulaval/modul-website.git"
    },
    "engines": {
        "node": ">= 6.0.0",
        "npm": ">= 3.0.0"
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not ie <= 10"
    ],
    "license": "Apache-2.0"
}
